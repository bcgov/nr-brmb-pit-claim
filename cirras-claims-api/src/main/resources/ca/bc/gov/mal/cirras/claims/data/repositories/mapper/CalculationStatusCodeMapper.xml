<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ca.bc.gov.mal.cirras.claims.data.repositories.mapper.CalculationStatusCodeMapper">

	<resultMap id="CalculationStatusCodeDtoMap" type="ca.bc.gov.mal.cirras.claims.data.entities.CalculationStatusCodeDto">
		<result property="calculationStatusCode" column="CALCULATION_STATUS_CODE" javaType="java.lang.String" jdbcType="VARCHAR" />
		<result property="description" column="DESCRIPTION" javaType="java.lang.String" jdbcType="VARCHAR" />
	</resultMap>
	
	
    <sql id="selectColumns">
	    SELECT 	T.CALCULATION_STATUS_CODE, 
       			T.DESCRIPTION 
    </sql>
    
	
	<select id="fetchAll" resultMap="CalculationStatusCodeDtoMap">  
		<include refid="selectColumns"/>
		FROM CALCULATION_STATUS_CODE T
		ORDER BY T.DESCRIPTION
	</select> 
	
	
</mapper>
